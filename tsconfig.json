{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2015",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "sourceMap": false,
        "strict": true,
        "noUnusedLocals": false,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "moduleResolution": "node",
        "lib": [
            "dom",
            "esnext",
            // Needed to allows iterating document.querySelectorAll('.foo') 
            "dom.iterable"  
        ]
    },
    "exclude": [
        "node_modules",
    ]
}